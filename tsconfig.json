{
  "compileOnSave": false,
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "pretty": true,
    "moduleResolution": "node",
    "target": "es6",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "noEmitOnError": false,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "lib": [
      "dom",
      "dom.iterable",
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "esnext.asynciterable"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "outDir": "./dist",
    "baseUrl": ".",
    "rootDir": "."
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./package.json"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx"
  ],
  "typedocOptions": {
    "inputFiles": ["./src"],
    "mode": "file",
    "out": "docs",
    "exclude": "**/test/**",
    "excludeNotExported": true,
    "excludePrivate": true,
    "disableSources": true
  }
}
